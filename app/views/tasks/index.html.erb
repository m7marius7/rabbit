<% provide(:title, 'home')%>

<h1 class="">aici e "index" din tasks folder</h1>

<div class="border p-5 space-y-2 bg-white text-cente1r">
    <div class="grid grid-cols-3 gap-6 p-10">
        <% @tasks.each do |task| %>
        <div
            class="flex flex-col justify-between max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
            <h1 class=" text-2xl font-bold tracking-tight text-gray-900 dark:text-white antialiased">
                <%= link_to task.title.capitalize, task_path(task) %></h1>
                <div class="shadow-md py-1 mb-3"></div>
            <p class="font-normal text-gray-700 dark:text-gray-400"> <%= task.description.capitalize %></p>
            <br>
            <p class="font-normal text-gray-700 dark:text-gray-400"> <%= task.company %></p>
        </div>
        <% end %>
    </div>
   
</div>