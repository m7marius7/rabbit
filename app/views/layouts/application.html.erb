<!DOCTYPE html>
<html>

<head>
    <!--<title><%= yield(:title) %> rabbit</title> -->
     <title><%= @meta_title %></title>
     <meta name="description" content="<%= @meta_description %>">
    <!-- Optional robot instructions can be set up in controllers -->
      <% if @meta_robots_instructions %>
        <meta name="robots" content="<%= @meta_robots_instructions %>">
      <% end %>

  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body>

  <main class=" bg-blue-100 dark:bg-gray-900 ">
     <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= render "shared/navbar" %>
    <section class=" h-screen">
      <div class="max-w-screen-xl px-4 mx-auto lg:px-12 w-full">
        <%= yield %>
      </div>
    </section>
  </main>

</body>

</html>